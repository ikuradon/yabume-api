{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --watch main.ts",
    "serve": "deno run --allow-env --allow-net --allow-read main.ts"
  },
  "imports": {
    "/": "./",
    "./": "./",
    "@hono/swagger-ui": "npm:@hono/swagger-ui@0.2.1",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@0.9.6",
    "@types/ip": "npm:@types/ip@1.1.3",
    "dotenv": "https://deno.land/std@0.217.0/dotenv/mod.ts",
    "hono": "npm:hono@4.0.6",
    "imgproxy": "npm:imgproxy@1.2.0",
    "ip": "npm:ip@2.0.1",
    "maxmind": "npm:maxmind@4.3.18",
    "nostr-tools": "npm:nostr-tools@2.3.1",
    "zod": "npm:zod@3.22.4"
  },
  "lint": {
    "include": [
      "."
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "include": [
      "."
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
